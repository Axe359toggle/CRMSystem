<Window x:Name="Showroom_Manager_Main_Menu" x:Class="CRMSystem.ShowroomManager_mainmenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMSystem"
        mc:Ignorable="d"
        Title="Main Menu" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <Button x:Name="cusComp_btn" Margin="100 80 100 20" Padding="10 5 10 5" Content="Make Customer Complaint" Click="cusComp_btn_Click"/>
        <Button Margin="100 10 100 20" Padding="10 5 10 5" Content="Make Batch Complaint"/>
        <Button Margin="100 10 100 20" Padding="10 5 10 5" Content="Back" Click="Button_Click"/>
    </StackPanel>
</Window>
